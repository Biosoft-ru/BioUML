/*
 * Zoom in action
 */
{
    id: "run_script",
    label: "Запустить скрипт",
    icon: "icons/run.gif",
    visible: "function(doc)
    {
    	if ((doc != null) && (doc instanceof ScriptDocument)) 
        {    
            return true;
        }
        return -1; 
    }",
    action: "function(event)
    {
        var activeDocument = opennedDocuments[activeDocumentId];
        if (activeDocument instanceof ScriptDocument) 
        {
            activeDocument.run();
        }
    }"
}